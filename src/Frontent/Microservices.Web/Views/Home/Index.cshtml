@{
    ViewData["Title"] = "Home Page";
    @model IEnumerable<PersonVm>
}

<div class="card" style="">
    <div class="card-body">
        <h5 class="card-title">Telefon Rehberi / Kişiler</h5>

        @if (Model != null && Model.Count() > 0)
        {

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">İsim</th>
                        <th scope="col">Soyisim</th>
                        <th scope="col">Firma</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Company</td>
                            <td>
                                <a href="@Url.Action("detail","home", new {id=item.Id})">Detay</a>
                                <a style="margin-left: 10px" href="@Url.Action("delete","home", new {id=item.Id})">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>

<div>

    <div class="card mt-5" style="">
        <div class="card-body">
            <h5 class="card-title">Yeni Ekle</h5>

            <form asp-controller="Home" asp-action="Create">
                <div class="form-group">
                    <label for="exampleInputEmail1">İsim</label>
                    <input required class="form-control" placeholder="İsim giriniz" name="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Soyisim</label>
                    <input required class="form-control" placeholder="Soyismi giriniz" name="Surname">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Firma</label>
                    <input required class="form-control" placeholder="Firma giriniz" name="Company">
                </div>
                <button  type="submit" class="btn btn-primary mt-4">Kaydet</button>
            </form>
        </div>
    </div>

</div>
